<div class="container">
  links
  <br>
  <hr/>
</div>
<div class="span-12">
  <% form_for @goal, :goal do |f| %>
  <%= error_messages_for :goal %>
  <fieldset>
    <legend class="quiet">Define a Goal</legend>
    <p>
      <label>Name</label><br>
      <%= f.text_field :name %>
    </p>
    <p>
      <label>Description</label><br>
      <%= f.text_area :description %>
    </p>
    <p>
      <label>Start Date</label<br>
      <%= calendar_date_select_tag "goal[start_date]" %>                          
    </p>

    <p>
      <label>Start Date</label<br>
      <%= calendar_date_select_tag "goal[end_date]" %>                          
    </p>

    <p>
      <label>Points</label>
      <%= f.text_field :points %>
    </p>
    <p>
      <%= submit_tag "submit" %>
      <%= link_to("cancel", goals_path) %>
    </p>
  </fieldset>
  <% end %>
</div>
